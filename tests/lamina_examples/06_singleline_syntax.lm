// Test single-line if statements
var x = 10;
if (x > 5) print("x is greater than 5");

// Test single-line if with else
var y = 3;
if (y > 5) print("y is greater than 5");
else print("y is not greater than 5");

// Test single-line if with return in function
func max(a, b) {
    if (a > b) return a;
    return b;
}
print("max(10, 5) =", max(10, 5));

// Test single-line while
var i = 0;
while (i < 3) i = i + 1;
print("i after while loop:", i);

// Test nested single-line if
var a = 10;
if (a > 5) if (a > 8) print("a is greater than 8");

print("All single-line tests passed!");
